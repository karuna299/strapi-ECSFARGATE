{
  "family": "karuna-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "REPLACE_EXEC_ROLE",
  "containerDefinitions": [
    {
      "name": "karuna-strapi",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1337,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "DATABASE_CLIENT", "value": "postgres" },
        { "name": "DATABASE_HOST", "value": "RDS_FROM_TERRAFORM" },
        { "name": "DATABASE_PORT", "value": "5432" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/karuna-strapi",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
